<IfModule mod_rewrite.c>
    RewriteEngine On

    # Prevent direct access to non-public files
    RewriteRule ^(artisan|server\.php|composer\.(json|lock)|\.env) - [F,L]

    # Redirect everything to public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
